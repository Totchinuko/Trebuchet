<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:local="clr-namespace:TrebuchetUtils.Modals"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="MessageModal" DataType="local:MessageModal">
        <Grid Margin="12">
            <Grid.Styles>
                <StyleInclude Source="avares://TrebuchetUtils/Styles/GeneralStyles.axaml"/>
            </Grid.Styles>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock VerticalAlignment="Center" Classes="Title" HorizontalAlignment="Left">
                    <Run Text="{Binding MessageTitle}" />
                </TextBlock>
                <Separator Opacity="0" Height="6" />
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap">
                    <Run Text="{Binding Message}" />
                </TextBlock>
            </StackPanel>
            <Button Content="Ok"
                    Classes="Base"
                    Command="{Binding CloseCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Width="50"
                    Grid.Row="1" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>