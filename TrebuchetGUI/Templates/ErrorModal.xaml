<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Trebuchet">
    <DataTemplate x:Key="ErrorModal">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource TitleText}" Foreground="{StaticResource GRed}">
                    <Run Text="{Binding ErrorTitle}" />
                </TextBlock>
                <Separator Opacity="0" Height="6" />
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap">
                    <Run Text="{Binding ErrorMessage}" />
                </TextBlock>
            </StackPanel>
            <Button Style="{StaticResource ButtonTabRed}"
                    local:GuiExtensions.Icon="pack://application:,,,/TrebuchetGUI;component/Icons/close.png"
                    local:GuiExtensions.IconSize="13"
                    Content="Close"
                    Command="{Binding CloseCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Row="1" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>