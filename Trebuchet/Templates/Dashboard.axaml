<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:local="clr-namespace:Trebuchet.Panels"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="Dashboard" x:DataType="local:DashboardPanel">
        <ScrollViewer>
            <Grid Margin="0,0,6,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" CornerRadius="3" HorizontalAlignment="Left" Padding="12" Margin="0,0,12,12">
                    <WrapPanel Orientation="Horizontal">
                        <Button Command="{Binding UpdateServerCommand}" Margin="0,0,6,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="avares://Trebuchet/Assets/Icons/Server.png" Width="16" Height="16" Margin="0,0,6,0" />
                                <TextBlock Text="Update Servers" />
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding UpdateAllModsCommand}" Margin="0,0,6,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="avares://Trebuchet/Assets/Icons/List.png" Width="16" Height="16" Margin="0,0,6,0" />
                                <TextBlock Text="Update All Mods" />
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding VerifyFilesCommand}" Margin="0,0,6,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="avares://Trebuchet/Assets/Icons/Magnifying.png" Width="16" Height="16" Margin="0,0,6,0" />
                                <TextBlock Text="Verify Files" />
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </Border>
                <ContentPresenter Grid.Row="1" ContentTemplate="{StaticResource ClientDashboard}" Content="{Binding Client}" />
                <Border Grid.Row="2" Margin="0,12" IsVisible="{Binding CanDisplayServers}" CornerRadius="3">
                    <Grid Margin="12">
                        <TextBlock Text="Servers" Margin="-10,-20,0,20" FontSize="30" Opacity="0.3" FontWeight="Bold" />
                        <WrapPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Command="{Binding LaunchAllCommand}" ToolTip.Tip="Launch All Server Intances" ToolTip.ShowDelay="0" Margin="0,0,6,0" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="avares://Trebuchet/Assets/Icons/Pacman.png" Width="16" Height="16" Margin="0,0,12,0" />
                                    <TextBlock Text="Launch All" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding CloseAllCommand}" ToolTip.Tip="Stop All Server Instances" ToolTip.ShowDelay="0" Margin="0,0,6,0" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="avares://Trebuchet/Assets/Icons/Close.png" Width="16" Height="16" Margin="0,0,12,0" />
                                    <TextBlock Text="Stop All" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding KillAllCommand}" ToolTip.Tip="Kill All Server Instances" ToolTip.ShowDelay="0" Margin="0,0,6,0" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="avares://Trebuchet/Assets/Icons/Skull.png" Width="16" Height="16" Margin="0,0,12,0" />
                                    <TextBlock Text="Kill All" />
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                    </Grid>
                </Border>
                <Border Grid.Row="3" Padding="24,0,0,0">
                    <ItemsControl ItemsSource="{Binding Instances}" ItemTemplate="{StaticResource ServerDashboard}" />
                </Border>
            </Grid>
        </ScrollViewer>
    </DataTemplate>
</ResourceDictionary>