<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:local="clr-namespace:Trebuchet"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="ClientDashboard" x:DataType="local:ClientInstanceDashboard">
        <Border Grid.Column="1" IsVisible="{Binding CanUseDashboard}" CornerRadius="3" Padding="0">
            <Border.Styles>
                <Style Selector="TextBlock.ProcessName">
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Opacity" Value="0.3" />
                </Style>
                <Style Selector="TextBlock.Active">
                    <Setter Property="Foreground" Value="Green" /><!-- TODO: Replace with theme -->
                    <Setter Property="Opacity" Value="0.8" />
                </Style>
            </Border.Styles>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Game" Classes="ProcessName" Classes.Active="{Binding ProcessRunning}" Margin="-10,-20,0,20" FontSize="30" FontWeight="Bold"/>
                    <WrapPanel Grid.Row="0" Orientation="Horizontal" Margin="0,20,0,12">
                        <Grid Margin="0,20,0,0" IsEnabled="{Binding ProcessRunning, Converter={StaticResource InvBoolean}}">
                            <TextBlock Margin="0,-18,0,0" Text="Game Profile" Foreground="#80FFFFFF" FontWeight="Light" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" />
                            <ComboBox ItemsSource="{Binding Profiles, Mode=OneWay}" VerticalAlignment="Center" Height="25" SelectedItem="{Binding SelectedProfile, Mode=TwoWay}" Width="200" Margin="0,0,12,0" />
                        </Grid>
                        <Grid Margin="0,20,0,0" IsEnabled="{Binding ProcessRunning, Converter={StaticResource InvBoolean}}">
                            <TextBlock Margin="0,-18,0,0" Text="Mod List" Foreground="#80FFFFFF" FontWeight="Light" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" />
                            <ComboBox ItemsSource="{Binding Modlists, Mode=OneWay}" VerticalAlignment="Center" Height="25" SelectedItem="{Binding SelectedModlist, Mode=TwoWay}" Width="200" Margin="0,0,12,0" />
                        </Grid>
                    </WrapPanel>
                    <WrapPanel Grid.Row="1">
                        <Button Command="{Binding LaunchCommand}" ToolTip.Tip="Launch Game" ToolTip.ShowDelay="0" Margin="0,0,6,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Svg Path="avares://TrebuchetUtils/Assets/SvgIcons/game.svg"  Classes="SvgIcon" Margin="0 0 12 0" />
                                <TextBlock Text="Launch" />
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding LaunchBattleEyeCommand}" ToolTip.Tip="Launch Game" ToolTip.ShowDelay="0" Margin="0,0,6,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Svg Path="avares://TrebuchetUtils/Assets/SvgIcons/game.svg"  Classes="SvgIcon" Margin="0 0 12 0" />
                                <TextBlock Text="Battle Eye" />
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding KillCommand}" ToolTip.Tip="Kill Game Process" ToolTip.ShowDelay="0" Margin="0,0,6,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Svg Path="avares://TrebuchetUtils/Assets/SvgIcons/kill.svg" Classes="SvgIcon" Margin="0 0 12 0" />
                                <TextBlock Text="Kill" />
                            </StackPanel>
                        </Button>
                        <Border VerticalAlignment="Center" IsVisible="{Binding IsUpdateNeeded}" Margin="0,0,6,0">
                            <Button Command="{Binding UpdateModsCommand}" ToolTip.Tip="Mod update available !" ToolTip.ShowDelay="0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="avares://Trebuchet/Assets/Icons/Reset.png" Width="16" Height="16" Margin="0,0,12,0" />
                                    <TextBlock Text="Update Mods" />
                                </StackPanel>
                            </Button>
                        </Border>
                    </WrapPanel>
                </Grid>
                <Border Grid.Column="1">
                    <ContentPresenter Content="{Binding ProcessStats}" ContentTemplate="{StaticResource ProcessStats}" />
                </Border>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>