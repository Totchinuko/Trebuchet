<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:settingFields="clr-namespace:Trebuchet.ViewModels.SettingFields"
                    xmlns:panels="clr-namespace:Trebuchet.ViewModels.Panels">
    <DataTemplate x:Key="FieldEditor" x:DataType="panels:FieldEditorPanel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ItemsControl ItemsSource="{Binding RequiredActions}" ItemTemplate="{StaticResource RequiredAction}" />
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Fields}" Margin="0,0,6,0" />
            </ScrollViewer>
        </Grid>
    </DataTemplate>
</ResourceDictionary>