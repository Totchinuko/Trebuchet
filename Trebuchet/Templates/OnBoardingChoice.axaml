<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:l="clr-namespace:Trebuchet.ViewModels.InnerContainer"
                    xmlns:asset="clr-namespace:Trebuchet.Assets"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="OnBoardingChoice" DataType="l:OnBoardingChoice">
        <Button Classes="Base Blue Heavy" MaxWidth="300" Margin="0 0 6 0" Command="{Binding Command}">
            <StackPanel>
                <TextBlock Classes="SmallTitle" Text="{Binding Title}" />
                <TextBlock Classes="SubText" Text="{Binding Description}"/>
            </StackPanel>
        </Button>
    </DataTemplate>
</ResourceDictionary>
