<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:l="clr-namespace:Trebuchet.ViewModels.InnerContainer"
                    xmlns:a="clr-namespace:Trebuchet.Assets"
                    xmlns:i="https://github.com/projektanker/icons.avalonia"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="OnBoardingNameSelection" DataType="l:OnBoardingNameSelection">
        <DockPanel LastChildFill="True">
            <TextBlock DockPanel.Dock="Top" Classes="Title" Text="{Binding Title}" />
            <TextBlock DockPanel.Dock="Top" Text="{Binding Description}" />
            <TextBlock DockPanel.Dock="Top" IsVisible="{Binding !IsValid}" Foreground="{DynamicResource TRed}" Text="{Binding ErrorMessage}" />
            <StackPanel Spacing="6" Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Top">
                <TextBox Classes="AutoFocus" VerticalAlignment="Center" Margin="0 0 12 0" Text="{Binding SelectedName, UpdateSourceTrigger=PropertyChanged}" Width="300" />
                <Button Classes="Base Green" Command="{Binding ConfirmCommand}" IsEnabled="{Binding IsValid}" Content="{x:Static a:Resources.Validate}" />
            </StackPanel>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>
