<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Trebuchet.SettingFields"
                    xmlns:controls="clr-namespace:Trebuchet.Controls">
    <DataTemplate x:Key="MapField" x:DataType="local:MapField">
        <Grid HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="400" MinWidth="300" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBox VerticalAlignment="Center"
                     Height="25"
                     VerticalContentAlignment="Center"
                     Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    
            <controls:MapList SelectedMap="{Binding Value, Mode=TwoWay}" Margin="3,0" VerticalAlignment="Center" Grid.Column="1" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>