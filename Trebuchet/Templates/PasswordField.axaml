<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="using:Trebuchet.Controls"
                    xmlns:settingFields="clr-namespace:Trebuchet.ViewModels.SettingFields">
    <DataTemplate x:Key="TextboxField" DataType="settingFields:PasswordField">
        <c:FieldRowControl>
            <c:FieldRowControl.FieldContent>
                <Border Height="38" Margin="0,3" MinWidth="300" MaxWidth="400" HorizontalAlignment="Left">
                    <TextBox
                        VerticalAlignment="Center"
                        Height="25"
                        VerticalContentAlignment="Center"
                        PasswordChar="*"
                        Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
            </c:FieldRowControl.FieldContent>
        </c:FieldRowControl>
    </DataTemplate>
</ResourceDictionary>