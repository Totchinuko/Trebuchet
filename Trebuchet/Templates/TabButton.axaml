<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:local="clr-namespace:Trebuchet.Panels"
                    xmlns:i="https://github.com/projektanker/icons.avalonia"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="TabButtonTemplate" x:DataType="local:Panel">
        <Button Margin="0,3,0,3"
                Classes="Base Blue TabLeft Heavy"
                Padding="6 8"
                HorizontalAlignment="Stretch"
                Classes.Sneak="{Binding !Active}"
                Classes.Colored="{Binding Active}"
                Command="{Binding .}"
                HorizontalContentAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <i:Icon Value="{Binding IconPath}" Classes="Normal" VerticalAlignment="Center" Margin="0 0 12 0" />
                <TextBlock Text="{Binding Label}" FontSize="14" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </DataTemplate>
</ResourceDictionary>