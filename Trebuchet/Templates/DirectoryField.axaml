<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Trebuchet.Controls"
                    xmlns:settingFields="clr-namespace:Trebuchet.ViewModels.SettingFields">
    <DataTemplate x:Key="DirectoryField" x:DataType="settingFields:DirectoryField">
        <Grid HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="400" MinWidth="300" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBox
            VerticalAlignment="Center"
            Height="25"
            VerticalContentAlignment="Center"
            Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    
            <controls:DirectoryFinder Path="{Binding Value, Mode=TwoWay}" CreateDefaultFolder="{Binding CreateDefaultFolder, Mode=OneWay}" DefaultFolder="{Binding DefaultFolder, Mode=OneWay}" Margin="3,0" VerticalAlignment="Center" Grid.Column="1" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>