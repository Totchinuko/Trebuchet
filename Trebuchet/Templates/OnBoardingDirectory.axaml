<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:l="clr-namespace:Trebuchet.ViewModels.InnerContainer"
                    xmlns:a="clr-namespace:Trebuchet.Assets"
                    xmlns:i="https://github.com/projektanker/icons.avalonia"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="OnBoardingDirectory" DataType="l:OnBoardingDirectory">
        <DockPanel LastChildFill="True">
            <TextBlock DockPanel.Dock="Top" Classes="Title" Text="{Binding Title}" />
            <TextBlock DockPanel.Dock="Top" Text="{Binding Description}" />
            <TextBlock DockPanel.Dock="Top" IsVisible="{Binding DisplayError}" Foreground="{DynamicResource TRed}" Text="{Binding ErrorMessage}" />
            <StackPanel Spacing="6" Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Top">
                <TextBox Text="{Binding ResultPath}" Width="350" VerticalAlignment="Center" />
                <Button Classes="Base" Command="{Binding SearchDirectoryCommand}">
                    <i:Icon Value="mdi-folder-search" Classes="Normal" />
                </Button>
                <Button Classes="Base Green" Command="{Binding ConfirmCommand}" IsEnabled="{Binding IsDirectoryValid}" Content="{x:Static a:Resources.Validate}" />
            </StackPanel>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>
