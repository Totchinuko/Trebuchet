<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:local="clr-namespace:Trebuchet"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="SteamWidget" x:DataType="local:SteamWidget">
        <Grid>
            <Button VerticalAlignment="Center"
                    Height="32"
                    HorizontalAlignment="Center"
                    Padding="8"
                    Command="{Binding ConnectCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="avares://Assets/Icons/Steam.png" Width="16" Height="16" Margin="0,0,12,0" VerticalAlignment="Center" />
                    <TextBlock VerticalAlignment="Center" Classes="Connected" Classes.Disconnected="{Binding !IsConnected}">
                        <TextBlock.Styles>
                            <Style Selector="TextBlock.Connected">
                                <Setter Property="Foreground" Value="CornflowerBlue" /><!-- TODO: Theme Here -->
                                <Setter Property="Text" Value="Connected to Steam" />
                            </Style>
                            <Style Selector="TextBlock.Disconnected">
                                <Setter Property="Foreground" Value="IndianRed" /><!-- TODO: Theme Here -->
                                <Setter Property="Text" Value="Connected to Steam" />
                            </Style>
                        </TextBlock.Styles>
                    </TextBlock>
                </StackPanel>
            </Button>
            <Border VerticalAlignment="Center" Height="32" Classes.Hidden="{Binding !Description}" MinWidth="400" HorizontalAlignment="Center" CornerRadius="3" Padding="0,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <ProgressBar Grid.ColumnSpan="2" Value="{Binding Progress, Mode=OneWay}" Background="Transparent" />
                    <TextBlock Text="{Binding Description}" Margin="6,0,12,0" VerticalAlignment="Center" />
                    <Button Grid.Column="1"
                            Margin="0"
                            Padding="8,0"
                            Content="Cancel"
                            Command="{Binding CancelCommand}" />
                </Grid>
            </Border>
        </Grid>
    </DataTemplate>
</ResourceDictionary>