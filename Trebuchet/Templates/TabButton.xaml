<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:Trebuchet"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="TabButtonTemplate">
        <Button local:GuiExtensions.Icon="{Binding Icon}"
                local:GuiExtensions.Accent="{Binding Active}"
                FontSize="16"
                FontWeight="Bold"
                Style="{StaticResource ButtonTab}"
                Content="{Binding Label}"
                Margin="0,6,0,6"
                Command="{Binding .}"/>
    </DataTemplate>
</ResourceDictionary>