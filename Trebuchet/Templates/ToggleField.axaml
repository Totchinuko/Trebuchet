<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Trebuchet.Controls"
                    xmlns:settingFields="clr-namespace:Trebuchet.ViewModels.SettingFields">
    <DataTemplate x:Key="ToggleField" DataType="settingFields:ToggleField">
        <c:FieldRowControl>
            <c:FieldRowControl.FieldContent>
                <CheckBox IsChecked="{Binding Value, Mode=TwoWay}" VerticalAlignment="Center" Cursor="Hand">
                    <TextBlock VerticalAlignment="Center" Classes="SubText" TextWrapping="Wrap" Text="{Binding Description}" />
                </CheckBox>
            </c:FieldRowControl.FieldContent>
        </c:FieldRowControl>
    </DataTemplate>
</ResourceDictionary>