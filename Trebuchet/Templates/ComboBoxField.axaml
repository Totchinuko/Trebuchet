<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Trebuchet.Controls"
                    xmlns:settingFields="clr-namespace:Trebuchet.ViewModels.SettingFields">
    <DataTemplate x:Key="ComboBoxField" x:DataType="settingFields:ComboBoxField">
        <c:FieldRowControl>
            <c:FieldRowControl.FieldContent>
                <ComboBox HorizontalAlignment="Left" MinWidth="250" ItemsSource="{Binding Options}" SelectedIndex="{Binding Value}" MaxWidth="300" />
            </c:FieldRowControl.FieldContent>
        </c:FieldRowControl>
    </DataTemplate>
</ResourceDictionary>