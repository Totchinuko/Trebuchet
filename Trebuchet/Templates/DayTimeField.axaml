<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Trebuchet.Controls"
                    xmlns:tuc="clr-namespace:TrebuchetUtils.Controls;assembly=tot-gui-lib"
                    xmlns:settingFields="clr-namespace:Trebuchet.ViewModels.SettingFields">
    <DataTemplate x:Key="DayTimeField" x:DataType="settingFields:DayTimeField">
        <c:FieldRowControl>
            <c:FieldRowControl.FieldContent>
                <Border Margin="0,3" MinWidth="300" MaxWidth="400" HorizontalAlignment="Left">
                    <TimePicker UseSeconds="{Binding UseSeconds}"
                                SelectedTime="{Binding Value}"/>
                </Border>
            </c:FieldRowControl.FieldContent>
        </c:FieldRowControl>
    </DataTemplate>
</ResourceDictionary>