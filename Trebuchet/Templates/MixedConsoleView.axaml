<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:vm="clr-namespace:Trebuchet.ViewModels"
                    xmlns:e="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
                    xmlns:a="clr-namespace:Trebuchet.Assets"
                    xmlns:t="clr-namespace:Trebuchet"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="MixedConsoleView" DataType="vm:MixedConsoleViewModel">
        <DockPanel LastChildFill="True">
            <CheckBox IsChecked="{Binding AutoScroll}" Content="{x:Static a:Resources.AutoScroll}" HorizontalAlignment="Left" DockPanel.Dock="Bottom" />
            <ThemeVariantScope RequestedThemeVariant="Dark">
                <Border Background="{DynamicResource TBackground}" CornerRadius="3" Margin="0 12" DockPanel.Dock="Top">
                    <e:TextEditor 
                        IsReadOnly="True" 
                        WordWrap="True" 
                        HorizontalScrollBarVisibility="Disabled" 
                        ScrollViewer.BringIntoViewOnFocusChange="False"
                        ShowLineNumbers="False"
                        FontSize="12" 
                        SyntaxHighlighting="Log"
                        FontFamily="{StaticResource Hack}">
                        <Interaction.Behaviors>
                            <t:DocumentTextBindingBehavior TextSource="{Binding .}" />
                        </Interaction.Behaviors>
                    </e:TextEditor>
                </Border>
            </ThemeVariantScope>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>
