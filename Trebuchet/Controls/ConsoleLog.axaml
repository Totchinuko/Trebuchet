<UserControl x:Class="Trebuchet.Controls.ConsoleLog"
             xmlns="https://github.com/avaloniaui"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Trebuchet.Controls"
             xmlns:panels="clr-namespace:Trebuchet.Panels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Styles>
        <Style Selector="Run.LogRun">
            <Setter Property="Foreground" Value="{DynamicResource TForeground}" />
        </Style>
        <Style Selector="Run.LogRunError">
            <Setter Property="Foreground" Value="{DynamicResource TRed}" />
        </Style>
    </UserControl.Styles>
    <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding $parent[local:ConsoleLog].ConsoleLogs, Mode=OneWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="panels:ObservableConsoleLog">
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,12">
                        <Run Text="{Binding Header, Mode=OneWay}" />
                        <Run Classes="LogRun" Classes.LogRunError="{Binding IsError}" Text="{Binding Body, Mode=OneWay}"/>
                    </TextBlock>
                </DataTemplate>
            </ItemsControl.ItemTemplate>2
        </ItemsControl>
    </ScrollViewer>
</UserControl>