<UserControl x:Class="Trebuchet.Controls.MapList"
             xmlns="https://github.com/avaloniaui"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Trebuchet.Controls"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="32">
    <StackPanel>
        <Button x:Name="MapListButton"
                Click="MapList_Click"
                ToolTip.Tip="Map Selection"
                ToolTip.ShowDelay="0"
                Padding="8">
            <Image Source="pack://application:,,,/TrebuchetGUILib;component/Icons/Map.png" Width="16" />
        </Button>
        <Popup Name="MapListPopup" IsLightDismissEnabled="True">
            <Border BorderThickness="1" CornerRadius="3" MaxHeight="300" MinWidth="100" Width="200">
                <ScrollViewer>
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding MapListData, RelativeSource={RelativeSource AncestorType=local:MapList}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Key}" Command="{Binding MapSelectCommand, RelativeSource={RelativeSource AncestorType=local:MapList}}" CommandParameter="{Binding Value}" Padding="4" HorizontalContentAlignment="Left" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Popup>
    </StackPanel>
</UserControl>