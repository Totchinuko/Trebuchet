<UserControl x:Class="Trebuchet.Controls.DirectoryFinder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Trebuchet.Controls"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="32">
    <Button x:Name="FindButton"
            Click="FindButton_MouseDown"
            Style="{StaticResource IconButton}" Padding="8">
        <Image Source="pack://application:,,,/TrebuchetGUILib;component/Icons/LocalStorage.png" Width="16" />
    </Button>
</UserControl>