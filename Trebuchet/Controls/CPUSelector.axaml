<UserControl x:Class="Trebuchet.Controls.CpuSelector"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Trebuchet.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Styles>
        <Style Selector="StackPanel.CpuPanel">
            <Setter Property="Opacity" Value="0.5" />
        </Style>
    </UserControl.Styles>
    <Border x:Name="CheckboxPanel">
        <ItemsControl ItemsSource="{Binding $parent[local:CpuSelector].CpuList}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="16" Rows="4" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Classes.CpuPanel="{Binding !$self.IsEnabled}" HorizontalAlignment="Right" Margin="0,0,0,4" Loaded="CheckBox_Loaded" Tag="{Binding .}">
                        <TextBlock Text="{Binding .}" Margin="0,0,4,0" />
                        <CheckBox Tag="{Binding .}" IsCheckedChanged="ToggleButton_OnIsCheckedChanged" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>