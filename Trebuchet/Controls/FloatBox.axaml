<UserControl x:Class="Trebuchet.Controls.FloatBox"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Trebuchet.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox x:Name="TextField"
             VerticalContentAlignment="Center"
             TextInput="TextBox_PreviewTextInput"
             LostFocus="TextField_PreviewLostKeyboardFocus"
             PastingFromClipboard="TextBox_Pasting" />
</UserControl>