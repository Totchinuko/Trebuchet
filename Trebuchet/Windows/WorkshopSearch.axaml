<!--<Window x:Class="Trebuchet.WorkshopSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trebuchet"
        xmlns:TrebGUI="clr-namespace:TrebuchetGUILib;assembly=TrebuchetGUILib"
        mc:Ignorable="d"
        Title="Workshop Search"
        Height="650" Width="900"
        MinHeight="450" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True" Background="{StaticResource GBackground}">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Border Style="{StaticResource WindowBackPanel}" FocusManager.FocusedElement="{Binding ElementName=SearchField}" x:Name="MainBorder">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TrebGUI:WindowTitlebar
                x:Name="TitleBar"
                Title="Workshop Search"
                CloseIcon="pack://application:,,,/TrebuchetGUILib;component/icons/Close.png"
                RestoreIcon="pack://application:,,,/TrebuchetGUILib;component/icons/Restore.png"
                MaximizeIcon="pack://application:,,,/TrebuchetGUILib;component/icons/Maximize.png"
                MinimizeIcon="pack://application:,,,/TrebuchetGUILib;component/icons/Minimize.png" />
            <Border Grid.Row="2" Padding="12">
                <Grid x:Name="WindowContent" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border Style="{StaticResource Panel}" CornerRadius="3" HorizontalAlignment="Left" Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox VerticalContentAlignment="Center" Name="SearchField" Text="{Binding SearchTerm, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" MinWidth="300" MaxWidth="400" Margin="0,0,12,0" VerticalAlignment="center" Height="25" KeyDown="TextBox_KeyDown" />
                            <Button Command="{Binding SearchCommand}" Grid.Column="1" Width="90" Content="Search" Margin="0,0,12,0" Style="{StaticResource TBtnStrokeBlueOver}" />
                            <CheckBox Grid.Column="2" IsChecked="{Binding TestLiveWorkshop, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" Content="Test Live Workshop" VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    <Border Padding="0,12,0,0" Grid.Row="1">
                        <Grid>
                            <ScrollViewer>
                                <ItemsControl ItemsSource="{Binding SearchResults}" x:Name="ResultList" Visibility="{Binding SearchResults, Converter={StaticResource Null2Hidden}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource Panel}" Padding="8" CornerRadius="3" Margin="3" Height="auto">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,12,0">
                                                        <Image Source="{Binding PreviewURL, Mode=OneWay}" Margin="0,0,0,12" />
                                                        <Button Style="{StaticResource TBtnStrokeGreenOver}"
                                                                HorizontalAlignment="Right"
                                                                Command="{Binding AddModCommand, RelativeSource={RelativeSource AncestorType=local:WorkshopSearch}}"
                                                                CommandParameter="{Binding .}"
                                                                Padding="8">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="pack://application:,,,/TrebuchetGUILib;component/Icons/Add.png" Width="16" Height="16" Margin="0,0,6,0" />
                                                                <TextBlock Text="Add to Mod List" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Vertical" Grid.Column="1">
                                                        <TextBlock TextWrapping="Wrap" Margin="0,0,3,0" FontSize="16" Grid.Row="1">
                                                            <Run Text="{Binding Title, Mode=OneWay}" Style="{StaticResource TitleRun}" /><Run Text=" By " /><Run Text="{Binding Creator, Mode=OneWay}" />
                                                        </TextBlock>
                                                        <TextBlock Foreground="{StaticResource GDescription}">
                                                            <Run Text="Last Update: " Foreground="{StaticResource GDescription}" />
                                                            <Run Text="{Binding LastUpdateReadable, Mode=OneWay}" Foreground="{StaticResource GDescription}" />
                                                            <Run Foreground="{StaticResource GGreen}" Text=" +" />
                                                            <Run Foreground="{StaticResource GGreen}" Text="{Binding VoteUp, Mode=OneWay}" />
                                                            <Run Foreground="{StaticResource GRed}" Text=" -" />
                                                            <Run Foreground="{StaticResource GRed}" Text="{Binding VoteDown, Mode=OneWay}" />
                                                            <Run Foreground="{StaticResource GRed}" Text=" " />
                                                            <Run Foreground="{StaticResource GDescription}" Text="{Binding Subs, Mode=OneWay}" />
                                                            <Run Foreground="{StaticResource GDescription}" Text=" Subscriptions" />
                                                        </TextBlock>
                                                        <TextBlock Foreground="{StaticResource GDescription}" TextWrapping="Wrap" Text="{Binding ShortDescription, Mode=OneWay}" />
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            <TextBlock Text="No results found">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Hidden" />
                                        <Setter Property="FontSize" Value="14" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Visibility, ElementName=ResultList}" Value="Hidden">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>