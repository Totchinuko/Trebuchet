<Window x:Class="Trebuchet.Windows.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:treb="clr-namespace:Trebuchet"
        xmlns:utils="clr-namespace:Trebuchet.Utils"
        xmlns:i="https://github.com/projektanker/icons.avalonia"
        xmlns:controls="clr-namespace:TrebuchetUtils.Controls;assembly=TrebuchetUtils"
        xmlns:viewModels="clr-namespace:Trebuchet.ViewModels"
        mc:Ignorable="d"
        Title="{x:Static viewModels:TrebuchetApp.AppTitle}"
        Height="650" Width="1010"
        MinHeight="550" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        SystemDecorations="Full"
        ExtendClientAreaTitleBarHeightHint="40"
        UseLayoutRounding="True"
        Classes="Trebuchet"
        x:DataType="viewModels:TrebuchetApp">
    <Border x:Name="MainBorder">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Panel Grid.RowSpan="2" Classes="DialogueBox" Classes.Active="{Binding DialogueBox.Active}">
                <Border Classes="Overlay" />
                <Border Classes="Blocker" Background="Transparent" />
                <Border Classes="Popup" HorizontalAlignment="{Binding DialogueBox.Popup.HorizontalAlignment, FallbackValue=Stretch}" VerticalAlignment="{Binding DialogueBox.Popup.VerticalAlignment, FallbackValue=Stretch}" MinHeight="{Binding DialogueBox.Popup.Height, FallbackValue=-1}" MinWidth="{Binding DialogueBox.Popup.Width, FallbackValue=-1}">
                    <ContentControl Content="{Binding DialogueBox.Popup}"  />
                </Border>
            </Panel>
            <controls:WindowTitlebar
                x:Name="TitleBar"
                ZIndex="2"
                Grid.Row="0"
                Title="{x:Static viewModels:TrebuchetApp.AppTitle}">
                <controls:WindowTitlebar.Header>
                    <ContentControl ContentTemplate="{StaticResource SteamWidget}" Content="{Binding SteamWidget}" />
                </controls:WindowTitlebar.Header>
            </controls:WindowTitlebar>
            <Panel Grid.Row="1">
                <Grid x:Name="WindowContent" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid x:Name="Navigation" Margin="0,0,5,6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Button Classes="Base TabLeft" Classes.Sneak="{Binding !FoldedMenu}" Classes.Colored="{Binding FoldedMenu}" Command="{Binding ToggleFoldedCommand}" Margin="0 0 0 6">
                            <i:Icon Value="mdi-view-list" Classes="Normal" />
                        </Button>
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding TopPanels}" ItemTemplate="{StaticResource TabButtonTemplate}" Classes.FoldedTabs="{Binding FoldedMenu}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="6" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                        <ItemsControl Grid.Row="2" ItemsSource="{Binding BottomPanels}" ItemTemplate="{StaticResource TabButtonTemplate}" Classes.FoldedTabs="{Binding FoldedMenu}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="6" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                    <Border x:Name="ContentPanel" Classes="DarkPanel" Grid.Column="1" CornerRadius="10,0,0,0" Padding="12,12,2,12">
                        <ContentControl Content="{Binding ActivePanel}" />
                    </Border>
                </Grid>
            </Panel>
        </Grid>
    </Border>
</Window>