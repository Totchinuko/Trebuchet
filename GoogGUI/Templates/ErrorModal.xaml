<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:GoogGUI.Controls">
    <DataTemplate x:Key="ErrorModal">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource TitleText}">
                    <Run Text="{Binding ErrorTitle}" />
                </TextBlock>
                <Separator Opacity="0" Height="6" />
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource NormalText}">
                    <Run Text="{Binding ErrorMessage}" />
                </TextBlock>
            </StackPanel>
            <Controls:GButton Style="{StaticResource TRedButton}"
                              ButtonText="Close"
                              Command="{Binding CloseCommand}"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Grid.Row="1"
                              ButtonIcon="pack://application:,,,/GoogGui;component/Icons/close.png" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>