<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:GoogGUI.Controls">
    <DataTemplate x:Key="DirectoryField">
        <Grid HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="400" MinWidth="300" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBox
            VerticalAlignment="Center"
            Height="25"
            VerticalContentAlignment="Center"
            Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=500}" />

            <Controls:DirectoryFinder Path="{Binding Value, Mode=TwoWay}" Margin="3,0" VerticalAlignment="Center" Grid.Column="1" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>