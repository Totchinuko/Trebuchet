<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="TabLabel">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding .}" Margin="0,12,0,3" FontWeight="Bold" />
            <Border Style="{StaticResource HorizontalSep}" Margin="0" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>