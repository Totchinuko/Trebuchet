<UserControl x:Class="GoogGUI.Controls.FieldDirFinder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoogGUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBox 
            Style="{StaticResource TextField}" 
            VerticalAlignment="Center" 
            Height="25" 
            VerticalContentAlignment="Center" 
            Text="{Binding Path}" 
            x:Name="PathField" 
            TextChanged="PathField_TextChanged" />
        <local:GButton 
            Grid.Column="1" 
            ButtonIconSize="13" 
            Style="{StaticResource TButton}" 
            Margin="3,0" 
            x:Name="SearchFolder"
            MouseDown="SearchFolder_MouseDown"
            ButtonIcon="pack://application:,,,/GoogGui;component/Icons/LocalStorage.png" />
    </Grid>
</UserControl>
