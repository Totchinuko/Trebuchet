<UserControl x:Class="GoogGUI.Controls.GButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GoogGUI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="150">
    <Border x:Name="MainBorder">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border x:Name="AccentBorder" Style="{StaticResource Accent}" />
            <Grid Margin="8,8" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="IconColumn" />
                    <ColumnDefinition x:Name="TextColumn" />
                </Grid.ColumnDefinitions>
                <Image x:Name="ImageIcon" />
                <TextBlock x:Name="Textblock" Grid.Column="2" VerticalAlignment="Center">
                    <Run x:Name="TextRun" />
                </TextBlock>
            </Grid>
        </Grid>
    </Border>
</UserControl>