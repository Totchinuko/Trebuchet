<UserControl x:Class="GoogGUI.Controls.AppMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:GoogGUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Navigation" Margin="4,0,5,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Controls:GButton Style="{StaticResource TButton}" ButtonIcon="/Icons/List.png" ButtonText="Mod List" />
            <Separator Height="10" Opacity="0" />
            <Controls:GButton Style="{StaticResource TButton}" ButtonIcon="/Icons/Game.png" ButtonText="Game Parameters" />
            <Separator Height="10" Opacity="0" />
            <Controls:GButton Style="{StaticResource TButton}" ButtonIcon="/Icons/Server.png" ButtonText="Server Parameters" />
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Controls:GButton Style="{StaticResource TButton}" ButtonIcon="/icons/Settings.png" ButtonText="Settings" />            
        </StackPanel>
    </Grid>
</UserControl>
