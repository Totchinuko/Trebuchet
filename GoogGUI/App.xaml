<Application x:Class="GoogGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GoogGUI"
             StartupUri="MainWindow.xaml"
             DispatcherUnhandledException ="OnDispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\AppSkin.xaml" />
                <ResourceDictionary Source="Styles\ScrollBar.xaml" />
                <ResourceDictionary Source="Styles\ButtonStyles.xaml" />
                <ResourceDictionary Source="Templates\Converters.xaml" />
                <ResourceDictionary Source="Templates\FieldRow.xaml" />
                <ResourceDictionary Source="Templates\DirectoryField.xaml" />
                <ResourceDictionary Source="Templates\FieldEditor.xaml" />
                <ResourceDictionary Source="Templates\ToggleField.xaml" />
                <ResourceDictionary Source="Templates\ErrorModal.xaml" />
                <ResourceDictionary Source="Templates\ExceptionModal.xaml" />
                <ResourceDictionary Source="Templates\TestliveSelection.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>